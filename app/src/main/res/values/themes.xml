<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Chesso" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/x2</item>
        <item name="colorPrimaryVariant">@color/x3</item>
        <item name="colorOnPrimary">@color/x5</item>
        <item name="colorSecondary">@color/c1</item>
        <item name="colorSecondaryVariant">@color/c3</item>
        <item name="colorOnSecondary">@color/x0</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Chesso.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Chesso.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Chesso.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
